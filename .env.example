# ============================================================
# Aegis Configuration Example
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================

# --- Telegram Channel ---
# Obtain from @BotFather on Telegram
AEGIS_TELEGRAM_BOT_TOKEN=

# Comma-separated list of allowed Telegram user IDs (whitelist)
# Get your ID from @userinfobot
AEGIS_TELEGRAM_ALLOWED_USERS=

# --- Optional: Approval Timeout ---
# Seconds to wait for approval before auto-denying (default: 300)
AEGIS_APPROVAL_TIMEOUT_SECONDS=300

# --- Optional: Logging ---
# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
AEGIS_LOG_LEVEL=INFO

# Log output format: text, json (default: text)
AEGIS_LOG_FORMAT=text

# --- Optional: Database ---
# Path to SQLite database file (default: ~/.aegis/aegis.db)
AEGIS_DB_PATH=

# --- Optional: Policy ---
# Path to policy config file (default: ~/.aegis/policy.toml)
AEGIS_POLICY_PATH=

# --- Optional: Daemon ---
# Port for local daemon socket (default: 39000)
AEGIS_DAEMON_PORT=39000
